#:kivy 3.0.0

<MainWindow>:
    orientation: 'vertical'

    MDToolbar:
        title: 'CREATORS - Assistant'
        size_hint_y: None
        height: dp(45)
        icon: 'logo_sm.jpg'
        
        MDIconButton:
            icon: 'expand-all-outline'
            on_release: app.show_all()
        MDIconButton:
            icon: 'microsoft-onenote'
            on_release: app.show_all_note()

    MDBottomNavigation:
        id: bottom_nav

        MDBottomNavigationItem:
            name: 'screen search'
            text: 'Search'
            icon: 'account-search-outline'

            MDBoxLayout:
                orientation: 'vertical'

                MDBoxLayout:
                    size_hint_y: None
                    height: dp(50)
                    MDTextField:
                        id: search_name
                        hint_text: 'Search for names'
                    MDRectangleFlatButton:
                        text: 'Search'
                        on_release:
                            app.name_search_and_populate_results_list(root.ids.search_name.text)

                MDBoxLayout:
                    size_hint_y: None
                    height: dp(35)
                    MDTextField:
                        id: search_phone
                        hint_text: 'Search for phone number'
                    MDRectangleFlatButton:
                        text: 'Search'
                        on_release:
                            app.phone_search_and_populate_results_list(root.ids.search_phone.text)

                MDBoxLayout:
                    size_hint_y: None
                    height: dp(35)
                    MDTextField:
                        id: search_email
                        hint_text: 'Search for email'
                    MDRectangleFlatButton:
                        text: 'Search'
                        on_release:
                            app.email_search_and_populate_results_list(root.ids.search_email.text)

                MDBoxLayout:
                    size_hint_y: None
                    height: dp(35)                
                    MDTextField:
                        id: search_birthday
                        hint_text: 'Search for birthday'
                    MDRectangleFlatButton:
                        text: 'Search'
                        on_release:
                            app.birthday_search_and_populate_results_list(root.ids.search_birthday.text)

                MDBoxLayout:
                    size_hint_y: None
                    height: dp(35)
                    MDTextField:
                        id: search_note
                        hint_text: 'Search for note'
                    MDRectangleFlatButton:
                        text: 'Search'
                        on_release:
                            app.note_search_and_populate_results_list(root.ids.search_note.text)

                ScrollView:
                    size_hint: 1, 5
                    MDList:
                        id: search_results
                
                Widget:


        MDBottomNavigationItem:
            name: 'screen 2 add'
            text: 'Add contact'
            icon: 'account-plus-outline'

            MDBoxLayout:
                orientation: 'vertical'

                MDTextField:
                    hint_text: 'Input name'
                    id: add_name
                    
                MDTextField:
                    hint_text: 'Input phone'
                    multiline: True
                    id: add_phones

                MDTextField:
                    hint_text: 'Input email'
                    id: add_email

                MDTextField:
                    hint_text: 'Input addresses'
                    id: add_addresses

                MDTextField:
                    hint_text: 'Input birthday'
                    id: add_birthday
                MDLabel:
                    id: message_label
                    theme_text_color: 'Error'
                    halign: 'center'
                    size_hint_y: None
                    height: dp(36)  # Встановлюємо фіксовану висоту для MDLabel    
                
                Widget:

                MDFloatingActionButton:
                    icon: 'plus'
                    pos_hint: {'right': .95}
                    on_release:
                        app.save_contact_and_switch_to_search(root.ids.add_name.text, root.ids.add_phones.text, root.ids.add_addresses.text, root.ids.add_birthday.text, root.ids.add_email.text,)

        MDBottomNavigationItem:
            name: 'screen 3 add'
            text: 'Add note'
            icon: 'note-plus'

            MDBoxLayout:
                orientation: 'vertical'

                MDTextField:
                    hint_text: 'Input tag'
                    id: add_tag
                    
                MDTextField:
                    hint_text: 'Input description'
                    id: add_description

                MDLabel:
                    id: message_label_tag
                    theme_text_color: 'Error'
                    halign: 'center'
                    size_hint_y: None
                    height: dp(36)  # Встановлюємо фіксовану висоту для MDLabel    
                
                Widget:

                MDFloatingActionButton:
                    icon: 'plus'
                    pos_hint: {'right': .95}
                    on_release:
                        app.save_note_and_switch_to_search(root.ids.add_tag.text, root.ids.add_description.text)

        MDBottomNavigationItem:
            name: 'screen 4'
            text: 'Command Line'
            icon: 'console'
            
            MDBoxLayout:
                orientation: 'vertical'
                                
                MDLabel:
                    id: command_output
                    text: ''
                    halign: 'center'
                    size_hint_y: 0.1  # Використання відсоткової висоти
                    theme_text_color: 'Custom'
                    text_color: [ 0, 139, 139, 1 ]



                ScrollView:
                    # size_hint_y: None
                    # height: dp(300)  # Задання висоти для ScrollView
                    size_hint_y: 0.7  # Використання відсоткової висоти
                    MDLabel:
                        id: command_output_result
                        text: ''
                        halign: 'center'
                        size_hint_y: None
                        height: self.texture_size[1]  # Встановлення висоти тексту

                MDLabel:
                    text: '\nWelcome to Command Line Interface!\nEnter the command to execute\n"add", "change", "phone", "all", "add-birthday", "show-birthday", "birthdays", "hello", "close", "exit"\n"add_note", "all_note", "delete_note", "search_note"\n"home"'
                    halign: 'center'
                    size_hint_y: 0.2  # Використання відсоткової висоти
                    theme_text_color: 'Custom'
                    text_color: [85, 107, 47, 1]


                MDTextField:
                    hint_text: 'Enter your command here...'
                    id: command_input
                    on_text: app.show_command_suggestions(self.text)
                    on_text: app.show_command_suggestions(self.text)
                    on_text_validate: app.process_command(root.ids.command_input.text)

            
        

<SearchResultsItem>:
    IconLeftWidget:
        icon: 'database'
    RightButton:
        icon: 'delete-variant'
        on_release:            
            root.delete()




